{
  "version": "1.0.0-*",
  "testRunner": "xunit",

  "dependencies":
  {
    "StyleCop.Analyzers":
    {
      "version": "1.0.0",
      "type": "build"
    },
    "Microsoft.NETCore.App":
    {
      "type": "platform",
      "version": "1.0.1"
    },
    "xunit": "2.1.0",
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Moq": "4.6.38-alpha",
    "TemplateCoreMaterial":
    {
      "target": "project"
    },
    "Microsoft.CodeCoverage":
    {
      "version": "1.0.1"
    }
  },

  "frameworks":
  {
    "netcoreapp1.0":
    {
      "imports":
      [
        "dnxcore50",
        "dotnet54",
        "portable-net45+win8"
      ]
    }
  },
  "buildOptions":
  {
    "xmlDoc": "true",
    //"warningsAsErrors": true,
    "additionalArguments":
    [
      "/additionalfile:..//..//stylecop.json"
    ]
  }
}